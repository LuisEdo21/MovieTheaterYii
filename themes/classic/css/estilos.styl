body
	font-size 16px
	margin 0 auto
	
h1, h2
	text-align center
	
#botonera 
	ul
		background rgba(15, 15, 15, 0.8)
		margin 3em auto
		text-align center
		li
			display inline-block
			padding 0.5em 1em
			vertical-align top
			a
				color white
				padding 0.5em
				transition all 1s ease
			a:hover
				background rgba(0, 0, 0, 0.8)
				text-decoration none
				
#cartelera
	span
		font-size 1.5em
		text-align center
	img
		width 200px
		height 300px
		transition all 1s ease
	img:hover
		transform scale(1.5)
		-webkit-transform scale(1.5)
		-moz-transform scale(1.5)
		-o-transform scale(1.5)
		-ms-transform scale(1.5)
	.botonera_pelicula
		ul
			li
				display inline-block
				vertical-align top
				a
					transition all 0.5s ease
					text-decoration none
	.lista_peliculas
		display inline-block
		padding 1em 0.5em
		text-align center
		vertical-align top
		width 30%
	.row
		margin-bottom 1em
	.sinopsis_pelicula
		font-size 1em
		font-style italic
		text-align justify
		
#compra
	img
		width 200px
		height 300px
		transition all 1s ease
	#MatrizDeAsientos
		tr 
			td 
				padding-right 1.5em
	
#nosotros, #cartelera, #nuestras_salas, #compra, #promociones, #servicios, #contacto, #inicio_sesion
	max-width 1024px
	margin 0 auto
	margin-top 4em
	#informacionServicios
		.row
			margin 0 auto
			.col-md-6
				margin-bottom 0.5em
				margin-right -4.5em
				
#PagoPuntos, #PagoTarjeta
	display none
	
.active
	background rgba(0, 0, 0, 0.8)
	text-decoration none
	
.carousel-inner
	width 100%
	max-height 340px
	
.horarios
	margin-top 2em
	
.miniaturas
	color white
	font-size 0.8em
	margin-top 1em
	margin-left -2em
	span
		border-radius 0.3em
		margin-right 1em
		padding 0.2em
		transition all 0.5s ease
	.clasificacionPelicula
		background rgba(19, 96, 156, 0.8)
	.clasificacionPelicula:hover
			background rgba(11, 33, 76, 0.8)
	.DuracionPelicula
		background rgba(12, 194, 12, 0.8)
	.DuracionPelicula:hover
		background rgba(44, 117, 5, 0.8)
	.GeneroPelicula
		background rgba(243, 130, 15, 0.8)
	.GeneroPelicula:hover
		background rgba(179, 93, 5, 0.8)
		
.navbar_mod
	background rgba(0, 89, 138, 1)
