body
	background url("../img/fondo/img.png")
	font-family: 'Nunito', sans-serif;
	font-size 16px
	margin 0 auto
	
footer
	.row
		background #0059B2
		font-size 2em
		font-weight bold
		margin 3em auto -3em auto
		padding 0.5em
		width 100%
		#RedesSociales
			color white
			a
				color white
				text-decoration none
				transition all 0.5s ease
			a:hover
				color yellow
			#integrantes
				font-size 0.5em	
				ul 
					list-style none
		.col-md-4
			margin-right -1em
	
h1, h2
	font-family: 'Hammersmith One', sans-serif;
	text-align center
	
#botonera 
	ul
		background rgba(15, 15, 15, 0.8)
		margin 3em auto
		text-align center
		li
			display inline-block
			padding 0.5em 1em
			vertical-align top
			a
				color white
				padding 0.5em
				transition all 1s ease
			a:hover
				background rgba(0, 0, 0, 0.8)
				text-decoration none
				
#cartelera
	span
		font-size 1.5em
		text-align center
	img
		width 200px
		height 300px
		transition all 1s ease
	img:hover
		transform scale(1.5)
		-webkit-transform scale(1.5)
		-moz-transform scale(1.5)
		-o-transform scale(1.5)
		-ms-transform scale(1.5)
	.botonera_pelicula
		ul
			li
				display inline-block
				vertical-align top
				a
					transition all 0.5s ease
					text-decoration none
	.lista_peliculas
		display inline-block
		padding 1em 0.5em
		text-align center
		vertical-align top
		width 30%
	.row
		margin-bottom 1em
	.sinopsis_pelicula
		font-size 1em
		font-style italic
		text-align justify
		
#compra
	img
		width 200px
		height 300px
		transition all 1s ease
	#MatrizDeAsientos
		tr 
			td
				padding-right 1.5em
				padding-top 0.5em
				a
					//background url("../img/asientos/asiento.png")
					border-radius 0.1em
					//height 25px
					padding 0.2em
					//width 25px
	#pantalla_asientos
		width 110%
		height 1em

#contacto
	strong
		font-size 1.5em
		
#FormBusqueda
	margin 2em auto 0 auto
	
#informacionPrincipal
	margin 0 2em
	
#nosotros
	p 
		text-align justify
	
#nosotros, #cartelera, #nuestras_salas, #compra, #promociones, #servicios, #contacto, #boleto
	max-width 1024px
	margin 0 auto
	margin-top 4em
	#informacionServicios
		.row
			margin 0 auto
			.col-md-6
				margin 1em -4em 1em 0
				transition all 1s ease
				.info
					background rgba(30, 30, 30, 0.6)
					color white
					display none
					font-size 1.5em
					font-weight bold
					height 236px
					padding 2em
					position absolute
					text-align justify
					top 0
					width 430px
			.col-md-6:hover
				.info
					display block
					
#nuestras_salas
	.lead
		text-align justify
				
#PagoPuntos, #PagoTarjeta
	display none
	
.active
	background rgba(0, 0, 0, 0.8)
	text-decoration none
	
.carousel-inner
	width 100%
	max-height 340px
	
.estreno
	img
		height 300px
		width 200px
	
.horarios
	margin-top 2em
	
.miniaturas
	color white
	font-size 0.8em
	margin-top 1em
	margin-left -2em
	span
		border-radius 0.3em
		margin-right 1em
		padding 0.2em
		transition all 0.5s ease
	.clasificacionPelicula
		background rgba(19, 96, 156, 0.8)
	.clasificacionPelicula:hover
			background rgba(11, 33, 76, 0.8)
	.DuracionPelicula
		background rgba(12, 194, 12, 0.8)
	.DuracionPelicula:hover
		background rgba(44, 117, 5, 0.8)
	.GeneroPelicula
		background rgba(243, 130, 15, 0.8)
	.GeneroPelicula:hover
		background rgba(179, 93, 5, 0.8)
		
.navbar_mod
	background #0059B2
	.navbar-brand
		color yellow
		img
			margin-left -1em
			margin-top -0.5em
			width 50%
			
.nombre_cine
	font-family 'Verdana'
	color yellow
	font-size 2em
	font-weight bold